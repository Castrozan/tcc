{
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifier": true,
        "files": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "outDir": "./dist",
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}